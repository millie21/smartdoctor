<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainLoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/fab_margin">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:text="Login as:"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <RelativeLayout
            android:layout_below="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/topatientlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/greenbackground"
                android:text="Patient"
                />

            <Button
                android:id="@+id/todoctorlogin"
                android:layout_below="@+id/topatientlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/greenbackground"
                android:text="doctor"
                />

            <Button
                android:id="@+id/toadminlogin"
                android:layout_below="@+id/todoctorlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/greenbackground"
                android:text="administrator"
                />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>