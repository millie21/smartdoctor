<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/transbackground"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/fab_margin"
        android:elevation="4dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textspecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="4dp"
                android:visibility="visible"
                android:layout_weight="8"
                android:textColor="@color/colorPurple"
                android:text="Date: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textViewappdate"
                android:layout_toRightOf="@id/textspecialization"
                android:layout_toEndOf="@id/textspecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_weight="8"
                android:text="2020-05-05"
                android:textColor="@color/colorPurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_below="@+id/textViewappdate"
                android:id="@+id/textViewDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="4dp"
                android:layout_weight="8"
                android:text="Dr. America"
                android:textColor="@color/colorPurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_below="@+id/textViewDoctor"
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="4dp"
                android:layout_weight="8"
                android:text="Dr. America"
                android:textColor="@color/colorPurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_below="@+id/textViewDoctor"
                android:id="@+id/textFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/textViewFees"
                android:layout_weight="8"
                android:padding="4dp"
                android:text="$"
                android:textColor="@color/colorPurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_below="@+id/textViewDoctor"
                android:id="@+id/textViewFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="8"
                android:padding="4dp"
                android:textColor="@color/colorPurple"
                android:text="500"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView

                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="8"
                android:visibility="gone"
                android:padding="4dp"
                android:textColor="@color/colorPurple"
                android:text="500"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/cancelfordoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewFees"
                android:background="@drawable/redbuttonbackground"
                android:textColor="@color/colorWhite"
                android:layout_toLeftOf="@+id/prescribe"
                android:text="Cancel"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/prescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewFees"
                android:layout_alignParentRight="true"
                android:background="@drawable/greenbuttonbackground"
                android:textColor="@color/colorWhite"
                android:text="Prescribe"
                android:layout_margin="5dp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>