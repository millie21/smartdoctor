<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Patient.PatientHomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/hometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Home"
            android:layout_margin="15dp"
            />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:visibility="visible"
            android:layout_marginBottom="2.5dp"
            card_view:cardCornerRadius="1dp"
            android:layout_centerHorizontal="true"
            card_view:cardBackgroundColor="#fff"
            android:layout_below="@+id/hometext"
            card_view:cardElevation="0dp"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:elevation="4dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_assignment_white_18dp"
                    android:tint="@color/colorPurple"
                    android:layout_margin="5dp"/>

                <View
                    android:id="@+id/centerShimy"
                    android:layout_height="60dp"
                    android:layout_width="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:text="Hi"
                    android:layout_toRightOf="@+id/centerShimy"
                    android:id="@+id/hitext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginBottom="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/centerShimy"
                    android:layout_below="@+id/hitext"
                    android:id="@+id/textViewEmail"
                    android:text="Email"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="invisible"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:text="Firstname"
                    android:layout_toRightOf="@+id/hitext"
                    android:id="@+id/textViewFirstname"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:text="Lastname"
                    android:layout_toRightOf="@+id/textViewFirstname"
                    android:id="@+id/textViewLastname"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="5dp"
                    android:visibility="gone"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:text="!"
                    android:layout_toRightOf="@+id/textViewLastname"
                    android:id="@+id/textViewExclamation"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="0dp"

                    />





            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            card_view:cardCornerRadius="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="2.5dp"
            card_view:cardElevation="0dp"
            android:layout_below="@+id/card_view0">

            <ImageView
                android:id="@+id/btLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|bottom"
                android:text="My Profile" />

        </android.support.v7.widget.CardView>
        <!--Same deal, but on the right -->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_below="@+id/card_view0"
            card_view:cardCornerRadius="1dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            card_view:cardElevation="0dp">
            <ImageView
                android:id="@+id/btRight2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="Appointments"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/card_view"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="2.5dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/btLeft22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="5dp"
                android:text="Contact Us"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view6"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_below="@+id/card_view4"
            card_view:cardCornerRadius="1dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            card_view:cardElevation="0dp">
            <ImageView
                android:id="@+id/btRight26"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="About Us"

                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view8"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/card_view5"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="2.5dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/btLeft223"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="5dp"
                android:text="My Health"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view9"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/card_view6"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/btLeft224"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/baseline_assignment_white_18dp"
                android:tint="@color/colorPurple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="5dp"
                android:text="Prescriptions"

                />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_below="@+id/card_view9"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/greenbackground"
            android:text="Logout" />
    </RelativeLayout>
</ScrollView>