<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    app:cardCornerRadius="@dimen/fab_margin"
    card_view:cardBackgroundColor="#ffffff">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="25dp"
            android:src="@drawable/baseline_healing_black_18dp"
            />
        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:visibility="visible"
            android:layout_margin="15dp"/>
<TableRow
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:id="@+id/tb1"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/centerShim"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="id :"
        android:layout_gravity="top"
        android:id="@+id/tvposition1"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="amstadam"
            android:id="@+id/tvposition"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:textColor="#16ae90"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy :"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorGreen"
        android:id="@+id/tvid1"
        android:textAllCaps="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="norway"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#16ae90"
            android:id="@+id/tvid"
            android:textAllCaps="true"
            />

</TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:id="@+id/tb2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_below="@+id/tb1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drugname :"
                android:id="@+id/tvname21"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:layout_marginRight="5dp"
                android:textAllCaps="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy3 :"
            android:textAllCaps="true"
            android:id="@+id/tvname2"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorGreen"
            android:layout_marginRight="15dp"/>

</TableRow>
        <TableRow
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_below="@+id/tb2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity    : "
                android:id="@+id/tvname215"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:layout_marginRight="0dp"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pharmacy3 : "
                android:id="@+id/tvid5"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorGreen"
                android:layout_marginRight="5dp"/>


        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="amstada2"
            android:id="@+id/tvname3"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"/>


            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="@android:style/TextAppearance.Small"-->
            <!--android:text="amstadam"-->
            <!--android:id="@+id/tvposition"-->
            <!--android:paddingTop="10dp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="55dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvname"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
            <!--android:text="norway"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textColor="#16ae90"-->
            <!--android:id="@+id/tvid"-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvpos"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>

