<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Doctor.DoctorHomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="visible"
            card_view:cardCornerRadius="1dp"
            android:layout_centerHorizontal="true"
            card_view:cardBackgroundColor="#fff"
            card_view:cardElevation="0dp"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:elevation="4dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_margin="5dp"/>

                <View
                    android:id="@+id/centerShimy"
                    android:layout_height="10dp"
                    android:layout_width="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_below="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Welcome Dr."
                    android:textAllCaps="true"
                    android:layout_toRightOf="@+id/centerShimy"
                    android:id="@+id/welcome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginBottom="5dp"

                    />

                <TextView
                    android:layout_below="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Kim"
                    android:textAllCaps="true"
                    android:layout_toRightOf="@+id/welcome"
                    android:id="@+id/textViewUsername"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginBottom="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/centerShimy"
                    android:layout_below="@+id/welcome"
                    android:id="@+id/name"
                    android:layout_margin="5dp"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="70dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="65dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:id="@+id/email"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/card_view0"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            card_view:cardElevation="5dp">
            <ImageButton
                android:id="@+id/btRight2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="Patient Appointments"
                android:textAllCaps="true"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/card_view_1"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            card_view:cardElevation="5dp">
            <ImageButton
                android:id="@+id/btRight2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="Patient Prescriptions"
                android:textAllCaps="true"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/card_view_2"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            card_view:cardElevation="5dp">
            <ImageButton
                android:id="@+id/btRight2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="Patient Health Data"
                android:textAllCaps="true"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            card_view:cardElevation="0dp"
            android:layout_below="@+id/card_view_3">

            <ImageButton
                android:id="@+id/btLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|bottom"
                android:textAllCaps="true"
                android:text="My Profile" />

        </android.support.v7.widget.CardView>
        <!--Same deal, but on the right -->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_6"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/card_view_4"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            card_view:cardElevation="0dp">
            <ImageButton
                android:id="@+id/btRight26"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|bottom"
                android:text="Help"
                android:textAllCaps="true"

                />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_below="@+id/card_view_6"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/greenbackground"
            android:text="Logout" />
    </RelativeLayout>
</ScrollView>